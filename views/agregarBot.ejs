<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Importamos el head -->
    <%- include('./partials/head.ejs'); %> 
    <title>Home</title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <!-- Importamos el header -->
    <%- include('./partials/header.ejs'); %> 
    <main>
        <section class="fomulario-login">
            <form>
                <h2>Registro nuevo Bot</h2>
                <label for="name">Nombre del bot</label>
                <input type="text" placeholder="Nombre del bot" name="name" id="name"/>

                <label for="host">Hostname</label>
                <input type="text" placeholder="Hostname" name="host" id="host"/>

                <label for="ip">Dirección IP</label>
                <input type="text" placeholder="Dirección IP" name="ip" id="ip"/>

                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Password">

                <div class="buttons">
                    <label for="btn-send" class="btn-send">Enviar</label>
                    <button type="submit" id="btn-send"></button>
                </div>
            </form>

            
        </section>
    </main>
    <!-- Importamos el footer -->
    <%- include('./partials/footer.ejs') %> 
</body>
</html>